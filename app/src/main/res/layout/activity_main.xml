<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/set_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="set person info"
        />

    <Button
        android:id="@+id/get_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get person info"
        />

    <Button
        android:id="@+id/set_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="set student info"
        />

    <Button
        android:id="@+id/get_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get student info"
        />

</LinearLayout>